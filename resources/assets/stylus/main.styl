	.products__categories
		width 22.5%
		float left

	.profile
		width 22.5%
		float left
	.profile__edit
	.product__edit__left
		width 50%
		float left
	.user__edit
	.product__edit__right
		width 30%
		float right

	.login__page
	.register__page
	.reset__page
		width 40%
