				&--carte
					margin-top 70px
					margin-left -15px

@media only screen and (max-width: 1200px)

	.page
		padding 30px 20px





@media only screen and (min-width: 640px)
	.header
		&-phone
			display block
	.main
		&-activities
			.slider-activities
				.ca-wrapper
					width 570px

	.activities
		li
			&.activity
				width: 50%;
				float: left;
	.img
		width 340px
		height auto
		margin-bottom 0
		&-float-left
			float left
			margin-right 1rem
		&-float-right
			float right
			margin-left 1rem


@media only screen and (min-width: 950px)
	.main
		&-activities
			.slider-activities
				.ca-wrapper
					width 870px
	.activities
		li

			&.activity
				width: 33.3333333%;
				float: left;


				> a
					background rgba(0, 0, 0, 0)
					opacity 0
					div
						opacity: 0;
						h4,
						p
							opacity: 0;

					&:hover
						background-color: rgba(0, 0, 0, 0.5);
						opacity: 1;
						transition: background 0.2s, opacity 0.2s;

						div
							opacity: 1;
							transition: opacity 0.2s;

							h4,
							p
								opacity: 1;
								transform: translateZ(0px);
							h4
								transition: opacity 0.5s, transform 0.5s;
							p
								transition: background-color 0.5s, opacity 0.5s 0.2s, transform 0.5s 0.2s;


