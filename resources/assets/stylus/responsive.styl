		&-bottom
			position static
		&-bottom
			padding-top 10px
		&-menu
		&-logo
			display none
		&-copyright
		&-redes
			display inline-block
			position static
			padding 0 20px

		&-contact
			width auto
			position static
			margin-bottom 5px
		.animation-container
			display none
